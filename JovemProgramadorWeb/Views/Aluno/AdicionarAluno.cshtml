@model Aluno;
<style>
    .Tudo{
        display : flex;
        flex-direction:column;
        justify-content : center;
        width : 100%;
    }
    .form{
        width: 30%;
        align-self: center;

    }
    .formFilho{
        padding-top: 1%;
        padding-bottom: 1%;
    }
    .botao {
        align-self: center;

    }
</style>
<h1 class="text-center">Adicionar</h1>
<br />
<div class="Tudo">
    <form asp-controller="Aluno" asp-action="InserirAluno" method="post">
        <div class="formFilho form-floating">
            <input type="text" asp-for="nome" class=" form-control" id="floatingInputGrid" placeholder="nome">
            <label for="floatingInputGrid">Nome :</label>
        </div>
        <div class="formFilho form-floating">
            <input type="text" asp-for="nota" class="form-control" id="floatingInputGrid" placeholder="nota">
            <label for="floatingInputGrid">Nota :</label>
        </div>
        <div class="formFilho form-floating">
            <input type="text" asp-for="situacao" class="form-control" id="floatingInputGrid" placeholder="situacao">
            <label for="floatingInputGrid">Situação :</label>
        </div>
        <div class="formFilho form-floating">
            <input type="text" asp-for="cep" class="form-control" id="floatingInputGrid" placeholder="nome">
            <label for="floatingInputGrid">CEP :</label>
        </div>
        
    </form>
    <br />
    <div class="botao">
        <a class="btn btn-primary" role="button" asp-area="" asp-controller="Aluno" asp-action="Aluno"> Voltar</a>
        <button type="submit" class="btn btn-primary" role="button"> Cadastrar</button>
    </div>
</div>


